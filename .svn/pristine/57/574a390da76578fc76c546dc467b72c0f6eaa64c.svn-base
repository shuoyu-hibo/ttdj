@CHARSET "UTF-8";

.youi-field{
	position:relative;
	line-height:25px;
	height:25px;
	width:100%;
	vertical-align:center;
	font-size:9pt;
}

.youi-field-caption{
	line-height:25px;
	padding-left:5px;
	padding-top:5px;
}

.youi-field-body{
	position:relative;
	overflow:hidden;
	padding:0;
	margin:0;
}

.youi-field-text{
	background:#FFFFFF url(../images/youi/form/text-bg.gif) repeat-x scroll 0pt;
	border:1px solid #B5B8C8;
	padding:2px 2px;
}

.youi-field-select-body{
	position:relative;
	background:#FFFFFF url(../images/youi/form/trigger.gif) no-repeat scroll right;
	border:1px solid #B5B8C8;
	padding:0 16px 0 0;
	margin:0;
	cursor:pointer;
}

.youi-field-select-over{
	background-image:url(../images/youi/form/trigger-over.gif);
}

.youi-field-selectText{
	background:#FFFFFF url(../images/youi/form/text-bg.gif) repeat-x scroll 0pt;
	border:0;
	padding:0px 2px;
	height:17px;
	width:134px;
	cursor:normal;
}

/**/
.youi-combo-list{
	border:1px solid #B5B8C8;
	width:100px;
	background:#fff;
}

.youi-combo-list-item{
	padding-top:2pt;
	height:18px;
	cursor:pointer;
}

.youi-combo-list-item-over{
	background:#C7E2DF;
}

.youi-combo-list-item-selected{
	background:#EEF6FF;
}

input.youi-button{
	background:transparent url(../images/youi/button/btn-sprite.gif) repeat-x scroll 0pt -43px;
	cursor:pointer;
	padding: 0pt 2pt 0pt 2pt;
	font-size:10pt;
}